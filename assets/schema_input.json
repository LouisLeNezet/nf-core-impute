{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/impute/master/assets/schema_input.json",
    "title": "nf-core/impute pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "patient": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Patient name cannot contain spaces"
            },
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces"
            },
            "lane": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Lane name cannot contain spaces"
            },
            "vcf": {
                "type": "string",
                "pattern": "^\\S+\\.vcf\\.gz$",
                "errorMessage": "Individuals vcf needs to be provided and must have an extension '.vcf.gz'"
            },
            "index": {
                "type": "string",
                "pattern": "^\\S+\\.vcf\\.gz\\.tbi$",
                "errorMessage": "Individuals vcf needs to be provided and must have an extension '.vcf.gz.tbi'"
            }
        },
        "required": ["sample", "vcf", "index"]
    }
}
